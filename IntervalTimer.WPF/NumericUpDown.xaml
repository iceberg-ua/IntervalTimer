<UserControl x:Class="IntervalTimer.WPF.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IntervalTimer.WPF"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <TextBox VerticalAlignment="Center" PreviewKeyDown="TextBoxPreviewKeyDown" Text="{Binding Value}"></TextBox>
        <ScrollBar Scroll="ScrollBarScroll" IsEnabled="True"></ScrollBar>
    </StackPanel>
</UserControl>
